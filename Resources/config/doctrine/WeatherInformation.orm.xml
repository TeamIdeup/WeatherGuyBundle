<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ideup\WeatherGuyBundle\Entity\WeatherInformation" table="weather_guy_weather_information">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        
        <field name="day" column="day" type="datetime" />
        
        <field name="maxTemperature" column="max_temperature" type="float" />
        
        <field name="maxTemperatureMoment" column="max_temperature_datetime" type="datetime" />
        
        <field name="minTemperature" column="min_temperature" type="float" />
        
        <field name="minTemperatureMoment" column="min_temperature_datetime" type="datetime" />
        
        <field name="avgTemperature" column="avg_temperature" type="float" />
        
        <field name="precipitation" column="precipitation" type="float" />
        
        <field name="sunshine" column="sunshine" type="float" />
        
        <many-to-one field="station" target-entity="WeatherStation" inversed-by="climatologicalValues">
            <join-column name="station_id" referenced-column-name="id" />
        </many-to-one>
    
    </entity>

</doctrine-mapping>
